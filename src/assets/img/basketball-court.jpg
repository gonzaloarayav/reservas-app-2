<svg width="1200" height="600" viewBox="0 0 1200 600" xmlns="http://www.w3.org/2000/svg">
  <!-- Background gradient -->
  <defs>
    <linearGradient id="dayGradient" x1="0%" y1="0%" x2="0%" y2="100%">
      <stop offset="0%" style="stop-color:#87CEEB;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#B0E0E6;stop-opacity:1" />
    </linearGradient>
    <linearGradient id="basketballCourtGradient" x1="0%" y1="0%" x2="0%" y2="100%">
      <stop offset="0%" style="stop-color:#CD853F;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#8B4513;stop-opacity:1" />
    </linearGradient>
    <radialGradient id="basketballGradient" cx="50%" cy="30%">
      <stop offset="0%" style="stop-color:#FF8C00;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#FF4500;stop-opacity:1" />
    </radialGradient>
  </defs>
  
  <!-- Sky background -->
  <rect width="1200" height="300" fill="url(#dayGradient)"/>
  
  <!-- Court surface -->
  <rect x="0" y="300" width="1200" height="300" fill="url(#basketballCourtGradient)"/>
  
  <!-- Basketball court -->
  <!-- Outer court boundary -->
  <rect x="200" y="350" width="800" height="200" fill="none" stroke="white" stroke-width="4"/>
  
  <!-- Center circle -->
  <circle cx="600" cy="450" r="60" fill="none" stroke="white" stroke-width="3"/>
  <circle cx="600" cy="450" r="20" fill="none" stroke="white" stroke-width="2"/>
  
  <!-- Free throw circles -->
  <circle cx="350" cy="450" r="60" fill="none" stroke="white" stroke-width="3"/>
  <circle cx="850" cy="450" r="60" fill="none" stroke="white" stroke-width="3"/>
  
  <!-- Three-point lines -->
  <path d="M 200 380 Q 350 320 500 380" fill="none" stroke="white" stroke-width="3"/>
  <path d="M 200 520 Q 350 580 500 520" fill="none" stroke="white" stroke-width="3"/>
  <path d="M 700 380 Q 850 320 1000 380" fill="none" stroke="white" stroke-width="3"/>
  <path d="M 700 520 Q 850 580 1000 520" fill="none" stroke="white" stroke-width="3"/>
  
  <!-- Free throw lines -->
  <line x1="290" y1="390" x2="290" y2="510" stroke="white" stroke-width="3"/>
  <line x1="910" y1="390" x2="910" y2="510" stroke="white" stroke-width="3"/>
  
  <!-- Basketball hoops -->
  <!-- Left hoop -->
  <rect x="190" y="440" width="10" height="20" fill="#FF4500"/>
  <ellipse cx="200" cy="450" rx="15" ry="3" fill="none" stroke="#FF4500" stroke-width="3"/>
  <line x1="185" y1="453" x2="215" y2="453" stroke="white" stroke-width="2"/>
  <line x1="188" y1="456" x2="212" y2="456" stroke="white" stroke-width="2"/>
  <line x1="191" y1="459" x2="209" y2="459" stroke="white" stroke-width="2"/>
  
  <!-- Right hoop -->
  <rect x="1000" y="440" width="10" height="20" fill="#FF4500"/>
  <ellipse cx="1000" cy="450" rx="15" ry="3" fill="none" stroke="#FF4500" stroke-width="3"/>
  <line x1="985" y1="453" x2="1015" y2="453" stroke="white" stroke-width="2"/>
  <line x1="988" y1="456" x2="1012" y2="456" stroke="white" stroke-width="2"/>
  <line x1="991" y1="459" x2="1009" y2="459" stroke="white" stroke-width="2"/>
  
  <!-- Basketball -->
  <circle cx="500" cy="420" r="20" fill="url(#basketballGradient)"/>
  <path d="M 480 420 Q 500 400 520 420" fill="none" stroke="#8B0000" stroke-width="2"/>
  <path d="M 480 420 Q 500 440 520 420" fill="none" stroke="#8B0000" stroke-width="2"/>
  <line x1="500" y1="400" x2="500" y2="440" stroke="#8B0000" stroke-width="2"/>
  
  <!-- Backboards -->
  <rect x="185" y="430" width="5" height="40" fill="#C0C0C0"/>
  <rect x="1010" y="430" width="5" height="40" fill="#C0C0C0"/>
  
  <!-- Stadium elements -->
  <rect x="100" y="250" width="30" height="50" fill="#666"/>
  <rect x="1070" y="250" width="30" height="50" fill="#666"/>
  
  <!-- Clouds -->
  <ellipse cx="300" cy="80" rx="60" ry="30" fill="white" opacity="0.9"/>
  <ellipse cx="900" cy="120" rx="80" ry="40" fill="white" opacity="0.9"/>
  
  <!-- Sun -->
  <circle cx="1050" cy="80" r="35" fill="#FFD700"/>
</svg>